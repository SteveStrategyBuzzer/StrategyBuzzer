APP_NAME=StrategyBuzzer
APP_ENV=local
APP_KEY=base64:your_app_key_here
APP_DEBUG=true

# --- Game Server JWT ---
# Shared secret for JWT authentication between Laravel and Game Server
# If not set, falls back to APP_KEY (decoded from base64)
GAME_SERVER_JWT_SECRET=your_shared_jwt_secret_here

LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_here
DB_USERNAME=your_username_here
DB_PASSWORD=your_password_here

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax
SESSION_DOMAIN=strategybuzzer.com

# --- OAuth Google ---
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://strategybuzzer.com/auth/google/callback

# --- OAuth Facebook ---
FACEBOOK_CLIENT_ID=your_facebook_client_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret_here
FACEBOOK_REDIRECT_URI=https://strategybuzzer.com/auth/facebook/callback

# Sanctum
SANCTUM_STATEFUL_DOMAINS=strategybuzzer.com,www.strategybuzzer.com,vps.strategybuzzer.com

# Vues compil√©es
VIEW_COMPILED_PATH=storage/framework/views

# Mail local
MAIL_MAILER=log
MAIL_HOST=localhost
MAIL_PORT=25
MAIL_FROM_ADDRESS=no-reply@strategybuzzer.local
MAIL_FROM_NAME="StrategyBuzzer"
