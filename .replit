modules = ["php-8.2", "nodejs-20", "web", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_openai_ai_integrations:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["imagemagick", "grpc", "redis"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Question API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Queue Worker"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Game Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Redis Server"

[[workflows.workflow]]
name = "Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t public"
waitForPort = 5000

[[workflows.workflow]]
name = "Question API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node question-api.js"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Queue Worker"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan queue:work --tries=3 --timeout=120"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Game Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/game-server && npx tsx src/index.ts"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Redis Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "redis-server --port 6379 --bind 127.0.0.1"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 24678
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["php", "-S", "0.0.0.0:5000", "-t", "public"]
build = ["cd", "frontend", "&&", "npm", "run", "build"]

[userenv]

[userenv.shared]
SESSION_DOMAIN = ""
SESSION_SECURE_COOKIE = "false"
SESSION_SAME_SITE = "lax"
QUESTION_API_URL = "http://localhost:3000"
QUEUE_CONNECTION = "database"
GAME_SERVER_JWT_SECRET = "strategybuzzer-game-server-jwt-secret-2026"

[userenv.development]
GAME_SERVER_URL = "http://localhost:3001"
